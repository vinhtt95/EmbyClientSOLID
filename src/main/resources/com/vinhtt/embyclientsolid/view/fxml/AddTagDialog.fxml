<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootPane" minHeight="1200.0" prefHeight="1200.0" prefWidth="550.0" spacing="15.0" styleClass="dialog-pane" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vinhtt.embyclientsolid.controller.AddTagDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <children>
            <RadioButton fx:id="simpleTagRadio" selected="false">
                <toggleGroup>
                    <ToggleGroup fx:id="tagTypeGroup" />
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="jsonTagRadio" selected="true" toggleGroup="$tagTypeGroup" />
        </children>
    </HBox>

    <VBox fx:id="inputContainer" spacing="5.0">

        <GridPane fx:id="simpleTagPane" hgap="10.0" managed="false" vgap="5.0" visible="false">
            <Label fx:id="contentLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="simpleNameField" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <GridPane fx:id="jsonTagPane" hgap="10.0" managed="true" vgap="5.0" visible="true">
            <Label fx:id="keyLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="keyField" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />

            <Label fx:id="valueLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="valueField" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </VBox>

    <VBox fx:id="suggestionJsonContainer" managed="true" spacing="10.0" visible="true" VBox.vgrow="ALWAYS">
        <children>
            <VBox spacing="5.0">
                <children>
                    <Label fx:id="suggestionKeyLabel" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-font-style: italic;" />
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" minHeight="150.0" prefHeight="150.0" styleClass="scroll-pane" vbarPolicy="AS_NEEDED">
                        <content>
                            <FlowPane fx:id="suggestionKeysPane" hgap="8.0" vgap="8.0">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                </padding>
                            </FlowPane>
                        </content>
                    </ScrollPane>
                </children>
            </VBox>
            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                <children>
                    <Label fx:id="suggestionValueLabel" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-font-style: italic;" />
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" minHeight="300.0" prefHeight="300" styleClass="scroll-pane" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                        <content>
                            <FlowPane fx:id="suggestionValuesPane" hgap="8.0" vgap="8.0">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                </padding>
                            </FlowPane>
                        </content>
                    </ScrollPane>
                </children>
            </VBox>
        </children>
    </VBox>


    <VBox fx:id="suggestionSimpleContainer" managed="true" spacing="5.0" visible="true" VBox.vgrow="ALWAYS">
        <children>
            <Label fx:id="suggestionSimpleLabel" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-font-style: italic;" />
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" minHeight="300.0" prefHeight="300" styleClass="scroll-pane" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                <content>
                    <FlowPane fx:id="suggestionSimplePane" hgap="8.0" vgap="8.0">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                    </FlowPane>
                </content>

            </ScrollPane>
        </children>
    </VBox>

    <HBox alignment="BOTTOM_CENTER" spacing="10.0">
        <children>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label fx:id="copyIdLabel" text="Sao chép nhanh từ ID:" />
                <HBox spacing="10.0">

                    <TextField fx:id="copyIdField" HBox.hgrow="ALWAYS" />
                    <Button fx:id="copyButton" />
                </HBox>
            </VBox>

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="cancelButton" onAction="#handleCancel" text="Hủy" HBox.hgrow="NEVER" />

            <Button fx:id="okButton" defaultButton="true" onAction="#handleOk" text="Đồng ý" HBox.hgrow="NEVER" />
        </children>
        <VBox.margin>
            <Insets top="5.0" />
        </VBox.margin>
    </HBox>
</VBox>
